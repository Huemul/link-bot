{
  "name": "node-api",
  "main": "server.js",
  "engines": {
    "node": "5.10.x",
    "npm": "3.8.x"
  },
  "scripts": {
    "preinstall": "cp scripts/pre-push .git/hooks/ || true",
    "start": "nodemon",
    "test": "istanbul cover node_modules/mocha/bin/_mocha src/tests/all.js && istanbul check-coverage --statement 50 --line 50 --branch 30 --function 50",
    "eslint": "eslint src/**/*.js",
    "precommit": "npm run eslint",
    "prepush": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matescript/link-bot.git"
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "body-parser": "~1.0.1",
    "express": "~4.0.0",
    "lodash": "^4.6.1",
    "mongoose": "^4.4.7",
    "morgan": "^1.7.0",
    "nodemon": "^1.9.1"
  },
  "devDependencies": {
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "husky": "^0.11.5",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "mockgoose": "^5.3.2",
    "should": "^8.3.0",
    "supertest": "^1.2.0"
  }
}
